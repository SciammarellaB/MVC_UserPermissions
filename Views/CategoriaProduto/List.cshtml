@model IEnumerable<MVC_UserPermissions.Models.CategoriaProduto>

@{
    ViewData["Title"] = "List";
}

<h1>List</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                <span>Id</span>
            </th>
            <th>
                <span>Nome</span>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
            <td>
                <span>@item.Id</span>
            </td>
            <td>
                <span>@item.Nome</span>
            </td>
        </tr>
}
    </tbody>
</table>
